{
  "ignore": [
    "README.md",
    ".gitignore"
  ],
  "commands": {
    "Compile contracts": "truffle compile",
    "Migrate contracts": "truffle migrate",
    "Test contracts": "truffle test",
    "Compile Elm app": "elm-make src/Main.elm --ouput build/elm.js"
  },
  "hooks": {
    "post-unpack": "mkdir build && cp src/index.html build/"
  }
}
